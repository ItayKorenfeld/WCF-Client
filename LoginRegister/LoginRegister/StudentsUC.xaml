<UserControl x:Class="LoginRegister.StudentsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginRegister"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <Image Source="/class-size.jpg" x:Name="MyClass" Height="100" MouseEnter="MyClass_MouseEnter" MouseLeave="MyClass_MouseLeave"  Width="150" Margin="2"  />

            <!--<Rectangle x:Name="MyClass1"  Fill="#982223" Height="100" MouseEnter="MyClass_MouseEnter" MouseLeave="MyClass_MouseLeave"  Width="150" Margin="2"/>-->
            <Label  x:Name="ClassName"  FontSize="11" Height="50" Width="100" FontWeight="Bold" Foreground="Red" Visibility="Visible"  Content="" Grid.Row="1"/>
        <TextBlock x:Name="amountprob" FontSize="11" FontWeight="Bold" Height="50" Width="200" Foreground="Turquoise" Visibility="Hidden"  Grid.Row="2"/>

        </Grid>
</UserControl>
